{
  "name": "web-widgets",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build-watson": "ng build --app ask-watson",
    "test": "ng test --watch false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "backend": "cd backend && node ng-server.js",
    "widgets-server": "node backend/widgets-server",
    "build": "node --max_old_space_size=3800000 --expose-gc bin/build",
    "build-all": "npm run rebuild-toolbox && npm run build --app=all",
    "build-widgets-dev": "node bin/build-widgets-dev",
    "build-widgets-prod": "node bin/build-widgets-prod",
    "build-widgets-stage": "node bin/build-widgets-stage",
    "rebuild-toolbox": "node bin/rebuild-toolbox-local",
    "weather-toolbox-npm-install": "cd weather-toolbox && npm install",
    "backend-npm-install": "cd backend && npm install",
    "tag": "node bin/tag",
    "npm-install": "npm install",
    "npm-install-all": "npm install && npm run weather-toolbox-npm-install && npm run backend-npm-install"
  },
  "bin": {
    "build": "bin/build.js",
    "build-widgets-dev": "bin/build-widgets-dev.js",
    "build-widgets-prod": "bin/build-widget-prod.js",
    "build-widgets-stage": "bin/build-widget-stage.js",
    "rebuild-toolbox": "bin/rebuild-toolbox-local.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.1.1",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/material": "2.0.0-beta.2",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@twc/wxyz": "^0.19.4",
    "core-js": "^2.4.1",
    "ngx-cookie": "^1.0.0",
    "rxjs": "^5.4.3",
    "watson-speech": "^0.33.0",
    "zone.js": "^0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "1.3.0",
    "@angular/compiler-cli": "^4.0.0",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "cheerio": "^1.0.0-rc.2",
    "codelyzer": "~2.0.0",
    "copyfiles": "^1.2.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "file-changed": "^1.1.2",
    "fs-cheerio": "^2.0.1",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "jsonfile": "^3.0.1",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.3.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-spec-reporter": "0.0.31",
    "pre-push": "^0.1.1",
    "protractor": "~5.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "^2.3.4"
  }
}
